extends ../layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        h1.text-center #{name}
        p.lead.text-center Description: #{desc}
        hr
        table.table.table-hover
          thead
            tr
              th Title
              th Content
          tbody
          each value in sections
            tr
              td
                a(href="/#{username}/#{courseId}/#{value.id}") #{value.title}
              td #{value.content}
        hr
          
        form.form-horizontal(action="/courses/#{id}", method="POST")
          fieldset
            .form-group
              label.col-md-4.control-label(for="title") Title
              .col-md-4
                input.form-control.input-md(name="title", required, type="text")
            .form-group
              label.col-md-4.control-label(for="content") Content
              .col-md-4
                input.form-control.input-md(name="content", required, type="text")
            .form-group
              .col-md-4.col-md-offset-4
                button.btn.btn-primary Create new section
