extends ../layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        form.form-horizontal(action="/courses", method="POST")
          fieldset
            legend
              h1.text-center Create new course
            .form-group
              label.col-md-4.control-label(for="name") Course name
              .col-md-4
                input.form-control.input-md(name="name", required, type="text")
            .form-group
              label.col-md-4.control-label(for="desc") Course byline
              .col-md-4
                input.form-control.input-md(name="desc", required, type="text")
            .form-group
              .col-md-4.col-md-offset-4
                button.btn.btn-block.btn-primary Create
