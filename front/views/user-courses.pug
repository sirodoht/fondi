extends layout

block content
  .section-header
    .container
      .row.vertical-align
        .col-md-9
          .section-header-title
            h2 Courses by #{username}
        .col-md-3
          .row
            .col-md-6.col-md-offset-5
              a(href="/new").btn.btn-block.btn-primary
                i.fa.fa-file-o
                | &nbsp;Create
  .section-body
    .container
      .row
        .col-md-9
          .row
            each course in courses
              .col-md-6
                .course-summary
                  a(href="/#{username}/1").course-summary-icon
                    i.fa.fa-book(aria-hidden="true")
                  .course-summary-body
                    h3.course-summary-body-title
                      a(href="/#{username}/1") #{course.name}
                    p #{course.description}

        .col-md-3
          .panel.panel-default
            .panel-heading.text-center
              .panel-title #{username}
            .panel-body #{bio}
