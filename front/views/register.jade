extends layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        //- h1 Register new user

        form.form-horizontal(action="/register", method="POST")
          fieldset
            legend
              h1 Join Fondi
            .form-group
              label.col-md-4.control-label(for='username') Username
              .col-md-4
                input#username.form-control.input-md(name='username', placeholder='angeleyes', required, type='text')
            .form-group
              label.col-md-4.control-label(for='name') Name
              .col-md-4
                input#name.form-control.input-md(name='name', placeholder='Angel Eyes', required, type='text')
            .form-group
              label.col-md-4.control-label(for='email') Email
              .col-md-4
                input#email.form-control.input-md(name='email', placeholder='angeleyes@miusystem.com', required, type='text')
            .form-group
              label.col-md-4.control-label(for='password') Password
              .col-md-4
                input#password.form-control.input-md(name='password', placeholder='••••••••••••', required, type='password')
            .form-group
              .col-md-4.col-md-offset-4
                button#signup.btn.btn-primary Create an account
